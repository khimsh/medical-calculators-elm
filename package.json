{
  "name": "medical-calculators-elm",
  "version": "1.0.0",
  "description": "Medical calculators implemented in Elm",
  "scripts": {
    "test": "elm-test",
    "build": "elm make src/Main.elm --output elm-app.js",
    "build:scss": "sass src/scss/styles.scss styles.css --style=compressed",
    "watch:scss": "sass --watch src/scss/styles.scss:styles.css",
    "watch:lint": "onchange \"src/scss/**/*.scss\" -- npm run lint:scss:fix",
    "watch:all": "npm-run-all --parallel watch:scss watch:lint",
    "lint:scss": "stylelint src/scss/**/*.scss",
    "lint:scss:fix": "stylelint src/scss/**/*.scss --fix",
    "build:prod": "elm make src/Main.elm --output elm-app.js --optimize"
  },
  "devDependencies": {
    "elm": "^0.19.1-6",
    "elm-test": "^0.19.1-revision7",
    "npm-run-all": "^4.1.5",
    "onchange": "^7.1.0",
    "prettier": "3.8.1",
    "sass": "^1.97.3",
    "stylelint": "^17.0.0",
    "stylelint-order": "^7.0.1"
  }
}
